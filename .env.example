# ========================================
# Telegram Bot Configuration
# ========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ========================================
# VIP Database (للمشتركين المميزين)
# ========================================
VIP_DB_HOST=localhost
VIP_DB_PORT=3306
VIP_DB_NAME=telegram_bot_vip
VIP_DB_USER=bot_user
VIP_DB_PASSWORD=your_vip_db_password_here
VIP_DATABASE_URL=mysql://bot_user:your_vip_db_password_here@localhost:3306/telegram_bot_vip

# ========================================
# Regular Database (للمشتركين العاديين)
# ========================================
REGULAR_DB_HOST=localhost
REGULAR_DB_PORT=3306
REGULAR_DB_NAME=telegram_bot_regular
REGULAR_DB_USER=bot_user
REGULAR_DB_PASSWORD=your_regular_db_password_here
REGULAR_DATABASE_URL=mysql://bot_user:your_regular_db_password_here@localhost:3306/telegram_bot_regular

# ========================================
# AI API Keys (اختياري)
# ========================================
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# ========================================
# Server Configuration
# ========================================
PORT=5000
BOT_URL=https://yourdomain.com
NODE_ENV=production

# ========================================
# Mastra Configuration
# ========================================
DATABASE_URL=${VIP_DATABASE_URL}
